<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Meta information, including character set and viewport settings -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Link to custom stylesheet -->
    <link rel="stylesheet" href="/css/style.css">

    <!-- Link to Bootstrap CSS from a CDN (Content Delivery Network) -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <!-- Title of the HTML page -->
    <title>Student Details</title>
</head>

<body>
    <!-- Container div for styling purposes -->
    <div class="container">
        <!-- Heading for student details -->
        <h1>Student Details</h1>

        <!-- Table to display student information -->
        <table class="table">
            <thead>
                <tr>
                    <!-- Table headers for student details -->
                    <th scope="col">Name</th>
                    <th scope="col">Roll No.</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <!-- Table cells with values dynamically fetched from 'student' object -->
                    <td>
                        <%= student.name %>
                    </td>
                    <td>
                        <%= student.rollNo %>
                    </td>
                </tr>
            </tbody>
        </table>

        <!-- Heading for displaying courses -->
        <h2>Courses</h2>

        <!-- Unordered list to display courses -->
        <ul>
            <!-- EJS conditional statement to check if courses are available for the student -->
            <% if (student.courses && student.courses.length> 0) { %>
                <!-- EJS loop to iterate through the 'courses' array and generate list items -->
                <% student.courses.forEach(course=> { %>
                    <!-- List item displaying course details using values from the 'course' object -->
                    <li><strong>
                            <%= course.courseName %>:
                        </strong>
                        <%= course.grade %>
                    </li>
                    <% }); %>
                        <% } else { %>
                            <!-- Message displayed when no courses are available -->
                            <li>No courses available</li>
                            <% } %>
        </ul>

        <!-- Heading for adding courses -->
        <h2>Add Courses</h2>

        <!-- Form for adding courses with action dynamically generated using 'student._id' -->
        <form action="/students/<%= student._id %>/add-course" method="POST">
            <!-- Input field for the course name -->
            <div class="form-group">
                <label for="courseName">Course Name:</label>
                <input type="text" name="courseName" id="courseName" class="form-control" required>
            </div>

            <!-- Input field for the course grade -->
            <div class="form-group">
                <label for="grade">Grade:</label>
                <input type="text" class="form-control" id="grade" name="grade" required>
            </div>

            <!-- Submit button for the form -->
            <button type="submit" class="btn btn-primary">Add Course</button>
        </form>
    </div>
</body>

</html>


